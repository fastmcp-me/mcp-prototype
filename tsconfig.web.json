{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
    "rootDir": "./src/web",
    "sourceMap": true,
		"strict": true,
		"moduleResolution": "bundler"
	},
  "include": ["src/web/**/*"],
  "exclude": ["src/web/**/*.test.ts"]
}
