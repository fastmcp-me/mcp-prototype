{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*"],
	"exclude": ["src/mcp/**/*", "src/**/*.test.ts"]
}
