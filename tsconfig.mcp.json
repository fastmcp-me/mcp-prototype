{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", 
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
  },
  "include": ["src/mcp/**/*"],
  "exclude": ["src/mcp/**/*.test.ts"]
}
